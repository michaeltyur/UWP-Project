<views:MvxWindowsPage
    xmlns:views="using:MvvmCross.Platforms.Uap.Views"
    x:Class="GardianNewsApp.UWP.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:GardianNewsApp.UWP.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightGray">
    <views:MvxWindowsPage.Resources>
        <local:DateToStringConverter x:Key="DateToStringConverter" />
        
        <DataTemplate x:Key="HamburgerTemplate" >
            <Grid Width="240" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0"  
                            Foreground="White" />
                <TextBlock Grid.Column="1" 
                           Text="fdfdf" 
                           FontSize="16" 
                           VerticalAlignment="Center" 
                           Foreground="White" />
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="NewsItem">
            <Border BorderThickness="3" 
                            Margin="5"
                            Padding="5"
                            BorderBrush="DarkGray">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical" 
                                    MaxWidth="400" 
                                    MaxHeight="500"
                                    x:Name="ItemPanel">
                        <controls:HamburgerMenu x:Name="hamburgerMenuControl"
                                                PaneBackground="Black" 
                                                Foreground="White" 
                                                ItemTemplate="{StaticResource HamburgerTemplate}"                                   
                                                OptionsItemTemplate="{StaticResource HamburgerTemplate}" >
                            <Frame x:Name="contentFrame" Foreground="Black"/>
                        </controls:HamburgerMenu>
                        <Image Source="{Binding StoryHeaderAdditionalFields.Thumbnail}"></Image>
                        <TextBlock Text="{Binding WebTitle}"
                                       TextWrapping="WrapWholeWords"
                                       FontSize="18"
                                       FontStyle="Italic"
                                       FontWeight="Medium"/>
                        <TextBlock Text="{Binding StoryHeaderAdditionalFields.TrailText}"
                                       TextWrapping="WrapWholeWords"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Publish Date:" 
                                   FontStyle="Italic"
                                   Margin="0 0 5 0"/>
                            <TextBlock Text="{Binding WebPublicationDate.Date, Converter={StaticResource DateToStringConverter}}"/>
                        </StackPanel>
                        <Button x:Name="GoToDetailsButton"
                                Content="Show"
                                Background="DimGray"
                                Height="50"
                                Width="400"
                                Margin="0 10 0 0"
                                Command="{Binding DataContext.GoToNewsDetailsCommand, ElementName=NewsList}"
                                CommandParameter="{Binding WebUrl}">
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </DataTemplate>
        
    </views:MvxWindowsPage.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
       
        </Grid.ColumnDefinitions>
        <controls:HamburgerMenu x:Name="HBMTest"                               
                                HorizontalAlignment="Left" 
                                Margin="10,66,0,0" 
                                VerticalAlignment="Top" 
                                ItemTemplate="{StaticResource HamburgerTemplate}" 
                                PaneBackground="DimGray" 
                                Foreground="White">
            <Frame x:Name="contentFrame" 
                   Margin="0,0,61,0" />
        </controls:HamburgerMenu>
        <ScrollViewer >
            <StackPanel Orientation="Vertical"
                Padding="0 40 0 0"
                HorizontalAlignment="Center">
                <Border BorderThickness="10"
                        BorderBrush="DarkSlateGray"
                        Background="DarkSlateGray">
                    <TextBlock Text="Wellcome to gardian news app" 
                       TextAlignment="Center"                      
                       FontSize="20"
                       Foreground="White"></TextBlock>
                </Border>
                <ProgressRing x:Name="ProgressRing" 
                      IsActive="{Binding ProgressRingIsActive}" 
                      Visibility="{Binding ProgressRingVisibility}"
                      Height="150"
                      Width="150" 
                      Foreground="Blue"
                      HorizontalContentAlignment="Center"
                      HorizontalAlignment="Center"
                      Padding="0 20 20 0"/>

                <GridView x:Name ="NewsList"
                    Background="LightGray" 
                    SelectionMode="Single"                   
                    ItemsSource="{Binding NewsCollection}"
                    VerticalContentAlignment="Center"
                    ItemTemplate="{StaticResource NewsItem}"
                    IsItemClickEnabled="True"
                      SelectedItem="{Binding SelectedItem}"
                      Tapped="NewsList_Tapped">
                </GridView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</views:MvxWindowsPage>
