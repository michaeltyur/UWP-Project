<views:MvxWindowsPage
    xmlns:views="using:MvvmCross.Platforms.Uap.Views"
    x:Class="GardianNewsApp.UWP.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GardianNewsApp.UWP.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:GardianNewsApp.Core.Models"
    mc:Ignorable="d"
    Background="LightGray">
    <views:MvxWindowsPage.Resources>
        <local:DateToStringConverter x:Key="DateToStringConverter" />
        <DataTemplate x:Key="NewsItem">
            <Border BorderThickness="3" 
                            Margin="5"
                            Padding="5"
                            BorderBrush="DarkGray">
                <StackPanel Orientation="Vertical" 
                                    MaxWidth="400" 
                                    MaxHeight="500">
                    <Image Source="{Binding StoryHeaderAdditionalFields.Thumbnail}"></Image>
                    <TextBlock Text="{Binding WebTitle}"
                                       TextWrapping="WrapWholeWords"
                                       FontSize="18"
                                       FontStyle="Italic"
                                       FontWeight="Medium"/>
                    <TextBlock Text="{Binding StoryHeaderAdditionalFields.TrailText}"
                                       TextWrapping="WrapWholeWords"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Publish Date:" 
                                   FontStyle="Italic"
                                   Margin="0 0 5 0"/>
                        <TextBlock Text="{Binding WebPublicationDate.Date, Converter={StaticResource DateToStringConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </views:MvxWindowsPage.Resources>
    <ScrollViewer>
        <StackPanel Orientation="Vertical"
                Padding="0 40 0 0"
                HorizontalAlignment="Center">
            <Border BorderThickness="10"
                BorderBrush="DarkSlateGray"
                Background="DarkSlateGray">
                <TextBlock Text="Wellcome to gardian news app" 
                       TextAlignment="Center"                      
                       FontSize="20"
                       Foreground="White"></TextBlock>
            </Border>
            <ProgressRing x:Name="ProgressRing" 
                      IsActive="{Binding ProgressRingIsActive}" 
                      Visibility="{Binding ProgressRingVisibility}"
                      Height="150"
                      Width="150" 
                      Foreground="Blue"
                      HorizontalContentAlignment="Center"
                      HorizontalAlignment="Center"
                      Padding="0 20 20 0"/>

            <GridView x:Name ="NewsList"
                    Background="LightGray" 
                    IsItemClickEnabled="True"
                    ItemsSource="{Binding NewsCollection}"
                    VerticalContentAlignment="Center"
                    ItemTemplate="{StaticResource NewsItem}">

            </GridView>
        </StackPanel>
    </ScrollViewer>
    
</views:MvxWindowsPage>
